<div class="product" style="border: 1px solid #ddd; padding: 10px; text-align: center;">
  <img src="<%= product.imageUrl %>" alt="<%= product.title %>" style="max-width: 100%; height: auto;">
  <h3><%= product.title %></h3>
  <% if (product.salePrice) { %>
    <p><s>$<%= product.price.toFixed(2) %></s> $<%= product.salePrice.toFixed(2) %></p>
  <% } else { %>
    <p>$<%= product.price.toFixed(2) %></p>
  <% } %>
  
  <% if (user && user.role === 'customer') { %>
    <form action="/cart/add" method="POST">
      <input type="hidden" name="productId" value="<%= product._id %>">
      <button type="submit" style="background: #4CAF50; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer;">
        Buy Now
      </button>
    </form>
  <% } %>
</div>