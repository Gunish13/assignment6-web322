<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6">Edit Product</h1>
    
    <% if (errors && errors.length > 0) { %>
        <div class="alert alert-error mb-4">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <form action="/inventory/edit/<%= product._id %>" method="POST" enctype="multipart/form-data" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="label">
                    <span class="label-text">Title*</span>
                </label>
                <input type="text" name="title" value="<%= product.title %>" class="input input-bordered w-full" required>
            </div>
            
            <div>
                <label class="label">
                    <span class="label-text">Category*</span>
                </label>
                <input type="text" name="category" value="<%= product.category %>" class="input input-bordered w-full" required>
            </div>
            
            <div>
                <label class="label">
                    <span class="label-text">Price*</span>
                </label>
                <input type="number" name="price" step="0.01" min="0.01" value="<%= product.price %>" class="input input-bordered w-full" required>
            </div>
            
            <div>
                <label class="label">
                    <span class="label-text">Sale Price</span>
                </label>
                <input type="number" name="salePrice" step="0.01" min="0.01" value="<%= product.salePrice %>" class="input input-bordered w-full">
            </div>
            
            <div>
                <label class="label">
                    <span class="label-text">Shipping Weight (kg)*</span>
                </label>
                <input type="number" name="shippingWeight" min="1" value="<%= product.shippingWeight %>" class="input input-bordered w-full" required>
            </div>
            
            <div>
                <label class="label">
                    <span class="label-text">Shipping Width (cm)*</span>
                </label>
                <input type="number" name="shippingWidth" min="1" value="<%= product.shippingWidth %>" class="input input-bordered w-full" required>
            </div>
            
            <div>
                <label class="label">
                    <span class="label-text">Shipping Length (cm)*</span>
                </label>
                <input type="number" name="shippingLength" min="1" value="<%= product.shippingLength %>" class="input input-bordered w-full" required>
            </div>
            
            <div>
                <label class="label">
                    <span class="label-text">Shipping Height (cm)*</span>
                </label>
                <input type="number" name="shippingHeight" min="1" value="<%= product.shippingHeight %>" class="input input-bordered w-full" required>
            </div>
        </div>
        
        <div>
            <label class="label">
                <span class="label-text">Description*</span>
            </label>
            <textarea name="description" class="textarea textarea-bordered w-full" rows="3" required><%= product.description %></textarea>
        </div>
        
        <div>
            <label class="label">
                <span class="label-text">Current Image</span>
            </label>
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="h-32 w-32 object-cover rounded-md">
        </div>
        
        <div>
            <label class="label">
                <span class="label-text">New Image (leave blank to keep current)</span>
            </label>
            <input type="file" name="imageUrl" class="file-input file-input-bordered w-full" accept="image/jpeg,image/png,image/gif">
        </div>
        
        <div class="form-control">
            <label class="label cursor-pointer justify-start gap-2">
                <input type="checkbox" name="featured" class="checkbox" <%= product.featured ? 'checked' : '' %>>
                <span class="label-text">Featured Product</span>
            </label>
        </div>
        
        <div class="flex justify-end gap-2">
            <a href="/inventory/list" class="btn btn-ghost">Cancel</a>
            <button type="submit" class="btn btn-primary">Update Product</button>
        </div>
    </form>
</div>

<%- include('partials/footer') %>